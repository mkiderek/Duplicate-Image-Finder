            </ScrollPane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
                      <StackPane prefHeight="150.0" prefWidth="200.0">
                          <children>
                              <ImageView fx:id="rightImage" pickOnBounds="true" preserveRatio="true" />
